<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Users</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-container">

    <!-- Mobile Header -->
    <div class="mobile-header">
      <button id="hamburger" class="hamburger">&#9776;</button>
      <span class="mobile-title">Admin Panel</span>
    </div>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">Admin Panel</div>
      <nav class="nav-links">
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/admin/users" class="active">Users</a>
        <a href="/admin/capsules">Capsules</a>
        <a href="/logout">Logout</a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="users-content">
      <h1>All Registered Users</h1>
      <div class="table-responsive">
        <table class="data-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Email</th>
              <th>Joined</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < users.length; i++) { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= users[i].name %></td>
                <td><%= users[i].email %></td>
                <td><%= new Date(users[i].created_at).toLocaleDateString() %></td>
                <td>
                  <form action="/admin/users/<%= users[i].id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn-delete">Delete</button>
                  </form>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
<script src="/js/script.js"></script>
</body>
</html>
